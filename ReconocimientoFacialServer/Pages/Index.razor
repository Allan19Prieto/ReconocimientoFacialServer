@page "/"
@namespace YourProject.Pages
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

<h3>Bienvenido a la Página Principal</h3>
<canvas id="neuronCanvas"></canvas>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Llama al JavaScript para inicializar la animación
            await JSRuntime.InvokeVoidAsync("initializeNeuronAnimation");
        }
    }
}
